# AWS Configuration
aws_region = "YOUR_AWS_REGION"

# Project Configuration
project_name = "YOUR_PROJECT_NAME"
environment  = "YOUR_ENVIRONMENT"  # e.g., dev, staging, prod

# S3 Configuration - Update with your unique bucket name
website_bucket_name = "YOUR_UNIQUE_BUCKET_NAME"

# DynamoDB Configuration
dynamodb_table_name = "YOUR_DYNAMODB_TABLE_NAME"

# Lambda Configuration
lambda_fetch_art_name       = "YOUR_LAMBDA_FETCH_ART_NAME"
lambda_process_store_name   = "YOUR_LAMBDA_PROCESS_STORE_NAME"
lambda_generate_html_name   = "YOUR_LAMBDA_GENERATE_HTML_NAME"
lambda_notifications_name   = "YOUR_LAMBDA_NOTIFICATIONS_NAME"

# Step Functions Configuration
step_functions_name = "YOUR_STEP_FUNCTIONS_NAME"

# EventBridge Configuration
eventbridge_rule_name = "YOUR_EVENTBRIDGE_RULE_NAME"
schedule_expression   = "YOUR_SCHEDULE_EXPRESSION"  # e.g., cron(0 12 * * ? *) for daily 12:00 UTC
